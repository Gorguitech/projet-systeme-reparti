apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend
  namespace: motos-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      containers:
      - name: frontend
        image: {{ frontend_image }}
        imagePullPolicy: IfNotPresent


        ports:
        - containerPort: 80
        volumeMounts:
        - name: media-storage
          mountPath: /usr/share/nginx/html/media
      volumes:
      - name: media-storage
        persistentVolumeClaim:
          claimName: media-pvc
